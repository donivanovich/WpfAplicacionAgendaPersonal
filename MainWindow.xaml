<Window x:Class="WpfAplicacionAgendaPersonal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAplicacionAgendaPersonal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Aplicación de Agenda Personal"
            FontSize="35"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="0,0,0,10"
        ></Label>

        <Grid 
            Grid.Row="1"
            Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Content="Menú"
                FontSize="18"
                FontWeight="Bold"
                Margin="5" 
                Click="ButtonMenu"
            />
            <Button
                Grid.Row="1"
                Content="Contactos"
                FontSize="18"
                FontWeight="Bold"
                Margin="5" 
                Click="ButtonContactos"
            />
            <Button
                Grid.Row="2"
                Content="Citas" 
                FontSize="18"
                FontWeight="Bold"
                Margin="5" 
                Click="ButtonCitas"
            />

        </Grid>
    
        <!--
        <TextBox
            x:Name="txtSeccion"
            Grid.Row="1"
            Grid.Column="1"
            Text="Sección Contactos"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,0,0,10"
            
        ></TextBox>-->

        <Frame
            x:Name="MainFrame"
            Grid.Row="1"
            Grid.Column="1"
            NavigationUIVisibility="Hidden"
        />

    </Grid>
</Window>