<Page x:Class="WpfAplicacionAgendaPersonal.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAplicacionAgendaPersonal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citas">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                Text="Página de Citas"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
                <ListBox
                x:Name="ListaCitasInterfaz"
                >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Titulo}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                <TextBlock Text="{Binding Descripcion}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock
                    Text="Agregar Nueva Cita"
                    FontSize="20"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,10"
                />
                <TextBox
                    Text="Titulo"
                    FontSize="14"
                    FontWeight="Medium"
                    x:Name="TxtTituloCita"
                    Margin="0,10,0,10"
                />
                <TextBox
                    Text="Descripcion"
                    FontSize="14"
                    FontWeight="Medium"
                    x:Name="TxtTituloDescripcion"
                    Height="100"
                />

                <DatePicker
                    x:Name="DatePickerFechaCita"
                    Margin="10,10,10,10"
                />
                
                
                <Button
                    Content="Agregar Cita"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,10"
                    Padding="10,5"
                    Click="BtnAgregarCita_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
